<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle1"
        android:scaleType="fitXY">

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:layout_marginTop="@dimen/_17sdp"
        android:layout_marginLeft="@dimen/_7sdp">

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_mentor"
        android:layout_gravity="top|center"
        android:layout_marginTop="@dimen/_25sdp">

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bell"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_20sdp">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_semibold"
        android:text="Software"
        android:textColor="@color/white"
        android:textSize="@dimen/_25sdp"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/_80sdp">

    </TextView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_170sdp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/_20sdp">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/rectangle_mentor"
            android:padding="@dimen/_5sdp">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_110sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_14sdp"
            android:fontFamily="@font/exo_semibold"
            android:text="Devendra Idkwhat"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_110sdp"
            android:layout_marginTop="@dimen/_28sdp"
            android:layout_marginRight="@dimen/_14sdp"
            android:fontFamily="@font/exo_semibold"
            android:text="Amazon"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_110sdp"
            android:layout_marginTop="@dimen/_42sdp"
            android:layout_marginRight="@dimen/_14sdp"
            android:fontFamily="@font/roboto"
            android:text="“Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis quis bibendum nulla. Suspendisse lacinia libero eu euismod” "
            android:textColor="#364356"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold">

        </TextView>
    </androidx.cardview.widget.CardView>



</FrameLayout>