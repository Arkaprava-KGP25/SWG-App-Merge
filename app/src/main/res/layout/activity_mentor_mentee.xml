<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle1"
        android:scaleType="fitXY">

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:layout_marginTop="@dimen/_17sdp"
        android:layout_marginLeft="@dimen/_7sdp">

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_mentor"
        android:layout_gravity="top|center"
        android:layout_marginTop="@dimen/_25sdp">

    </ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bell"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_20sdp">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_semibold"
        android:text="Find Information about"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/_80sdp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_semibold"
        android:text="Your Mentor/Mentee"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/_100sdp">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_170sdp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/_20sdp">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/rectangle_mentor"
            android:padding="@dimen/_5sdp">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_110sdp"
            android:fontFamily="@font/exo_semibold"
            android:text="Your Mentor/Mentee"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_14sdp"
            >

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_105sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_semibold"
                android:padding="@dimen/_5sdp"
                android:text="Enter your Roll Number"
                android:textSize="@dimen/_10sdp">

            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/_120sdp">

            </ImageView>

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_semibold"
        android:text="Mentor Details >>"
        android:textColor="#364356"
        android:textSize="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_300sdp"
        android:layout_marginLeft="@dimen/_10sdp">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_330sdp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/_20sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentor Name"
            android:textColor="#364356"
            android:textSize="@dimen/_19sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_140sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll Number"
            android:textColor="#364356"
            android:textSize="@dimen/_17sdp"
            android:paddingTop="@dimen/_45sdp"
            android:paddingLeft="@dimen/_10sdp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact No: 7990484709"
            android:textColor="#364356"
            android:textSize="@dimen/_17sdp"
            android:paddingTop="@dimen/_68sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            />


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_semibold"
        android:text="Mentee Details >>"
        android:textColor="#364356"
        android:textSize="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_450sdp"
        android:layout_marginLeft="@dimen/_10sdp">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_490sdp"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/_20sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentee Name"
            android:textColor="#364356"
            android:textSize="@dimen/_19sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_140sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll Number"
            android:textColor="#364356"
            android:textSize="@dimen/_17sdp"
            android:paddingTop="@dimen/_45sdp"
            android:paddingLeft="@dimen/_10sdp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact No: 7990484709"
            android:textColor="#364356"
            android:textSize="@dimen/_17sdp"
            android:paddingTop="@dimen/_68sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            />


    </androidx.cardview.widget.CardView>



</FrameLayout>